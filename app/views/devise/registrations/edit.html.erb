<div class="row">
  <div class="span5">

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "well", :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <legend>Edit <%= resource_name.to_s.humanize %></legend>

        <%= f.input :email, :autofocus => true %>
        
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <%= f.input :password,:autocomplete => "off" %> <i id="passInfo">(leave blank if you don't want to change it)</i>
       
        <%= f.input :password_confirmation %><br /><br />

        <%= f.input :current_password %> <i>(we need your current password to confirm your changes)</i><br /><br />

        <div><%= f.button :submit, "Update", :class => "btn-warning" %></div>
      </fieldset>
    <% end %>

    <!-- Uncomment code on later stage!! Cancel function is craching the app!!

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :class => "btn btn-small disabled", :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

    -->
    <%= link_to "Back", :back %>
  </div>
</div>
